# Production Environment Variables
# Copy this file to .env.production and fill in your production values

# Database (Neon PostgreSQL)
DATABASE_URL="postgresql://user:password@your-neon-host.neon.tech/neondb?sslmode=require"

# NextAuth
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="your-production-secret-key-here-use-openssl-rand-base64-32"

# OAuth Providers (Optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Payment Gateway (Stripe)
# Production keys from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY="pk_live_..."
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Email Service (Resend)
# Production API key from: https://resend.com/api-keys
RESEND_API_KEY="re_..."
EMAIL_FROM="MyPilot <noreply@yourdomain.com>"

# Redis (Optional - for rate limiting in production)
REDIS_URL="redis://your-redis-host:6379"

# AWS S3 (Optional - for file uploads)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET="mypilot-uploads"

# External APIs
EXCHANGE_RATE_API_KEY=""

# Monitoring & Analytics
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""
NEXT_PUBLIC_SENTRY_DSN=""
POSTHOG_API_KEY=""
NEXT_PUBLIC_POSTHOG_KEY=""
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Vercel Analytics (Automatically set by Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=""

# Environment
NODE_ENV="production"

# Security
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=""

# Feature Flags
ENABLE_REGISTRATION="true"
ENABLE_GUEST_CHECKOUT="true"
MAINTENANCE_MODE="false"
